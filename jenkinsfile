pipeline{
    agent any
    
    stages{
        stage("Build"){
            steps{
                echo "Starting Build Phase..."
                bat 'dotnet build'
            }
            post{
                always{
                    echo "Step execution completed"
                }
                success{
                    echo "Build success!"
                }
                failure{
                    echo "Build failed"
                }
            }
        }
        stage("Test"){
            steps{
                echo "Starting Test Phase..."
                bat 'dotnet test'
                echo 'Server tests complete!'
                bat 'npm --prefix ClientApp run test'
            }
            post{
                always{
                    echo "Test execution completed"
                }
                success{
                    echo "All tests passed!"
                }
                failure{
                    echo "One or more tests failed"
                }
            }
        }
    }
    post{
        always{
            echo "========always========"
            mail bcc: '', body: "<b>Example</b><br>Project: ${env.JOB_NAME} <br>Build Number: ${env.BUILD_NUMBER} <br> Build URL: ${env.BUILD_URL}", cc: '', charset: 'UTF-8', from: 'Jenkins Admin', mimeType: 'text/html', replyTo: '', subject: "ERROR CI: Project name -> ${env.JOB_NAME}", to: "neil27-test-grp@googlegroups.com";
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}
